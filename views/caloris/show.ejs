<%- include ('../partials/header') %>


<div class="container my-5">
  <header>
    <h1> Entry:
      <%= calori.numberofday %>
      <a href="/caloris/<%= calori.id %>/edit">
        <i class="fa fa-edit"></i>
      </a>
      <a href="/caloris/<%= calori.id %>/delete">
        <i class="fa fa-trash"></i>
      </a>
    </h1>
    <h4>Breakfast: <%= calori.breakfast %></h4>
    <h4>Lunch: <%= calori.lunch %></h4>
    <h4>Supper: <%= calori.supper %></h4>
    <h4>Calorie intake: <%= calori.calorieintake %></h4>
    <p><strong>By: <%= calori.user.fullname %></strong></p>
  </header>
  <hr>
  <div class="content">
    <%- calori.content %>
  </div>
</div>


<%- include ('../partials/footer') %>
